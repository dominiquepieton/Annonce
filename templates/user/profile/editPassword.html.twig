{% extends 'base.html.twig' %}

{% block title %}Modif. Password {% endblock %}

{% block body %}
<div class="container">
    <div class="w-75 mx-auto">
        <h1 class="text-center mt-3">Modification de votre password</h1>
        <hr class="w-50 mx-auto mt-3">
        <form action="" method="post">
            <div class="form-group">
                <label for="password1">Nouveau password</label>
                <input type="password" class="form-control" name="newPassword" id="password1">
            </div>        
            <div class="form-group">
                <label for="password2">Confirmer password</label>
                <input type="password" class="form-control" name="confirmPassword" id="password2">
            </div>
            <input type="submit" class="btn btn-outline-info" value="Valider">       
        </form>
    </div>
</div>
{% endblock %}