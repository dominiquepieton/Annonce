{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container mt-5">
    {% for message in app.flashes('verify_email_success') %}
         <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="jumbotron">
        <h1 class="display-4 text-center">Hello, bienvenue</h1>
        <p class="lead text-center">Vous avez des objets que vous voulez vendre.</p>
        <hr class="w-50 bg-danger">
        <p class="text-center">Alors c'est par ici que cela se passe, une petite inscription. Vendez vos objets....</p>
        <p class="lead text-center">
            <a class="btn btn-primary btn-lg" href="#" role="button">Contactez-nous</a>
        </p>
    </div>

    <h2 class="mt-5 mb-3">Multimédia :</h2>
    <div class="row">
    {% for console in annonce %}
        <div class="col-md-3 mr-3">
            <div class="card" style="width: 18rem;">
                {#<img class="card-img-top" src="..." alt="Card image cap">#}
                <div class="card-body">
                    <h5 class="card-title">{{ console.title }}</h5>
                    <p class="card-text">{{console.content |striptags|slice(0, 100)}}</p>
                    <p class="card-text">Le : {{console.createdAt |date('d-m-Y')}}</p>
                    <a href="#" class="btn btn-primary">Savoir plus</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

    <h2 class="mt-5 mb-3">Véhicules :</h2>
    <div class="row">
    {% for vehicule in vehicules %}
        <div class="col-md-3 mr-3">
            <div class="card" style="width: 18rem;">
                {#<img class="card-img-top" src="..." alt="Card image cap">#}
                <div class="card-body">
                    <h5 class="card-title">{{ vehicule.title }}</h5>
                    <p class="card-text">{{vehicule.content |striptags|slice(0, 100)}}</p>
                    <p class="card-text">Le : {{vehicule.createdAt |date('d-m-Y')}}</p>
                    <a href="#" class="btn btn-primary">Savoir plus</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
